<h1>Songs</h1>

<h3 class="w3-display-bottommiddle w3-yellow">

  <div>
    <% if signed_in? -%>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
    <% end -%>
  </div>
</h3>

<table>
  <thead>
    <tr>
      <th>Song name</th>
      <th>Artist</th>
      <th>Location</th>
      <th>Genre</th>
      <th>Explicit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.s_name %></td>
        <td><%= song.artist %></td>
        <td><a href="<%= song.link %>">Play song</a></td>
        <td><%= song.genre %></td>
        <td><%= song.explicit %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path %>
